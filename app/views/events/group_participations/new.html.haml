- title ti(:title, :model => model_class_label(entry))

%p
  Anmeldung bei
  = @event
  als
  %b
    = @participating_group

= crud_form(path_args(entry),
  buttons_bottom: true,
  buttons_top: false,
  cancel_url: polymorphic_path(path_args(model_class), returning: true)) do |f|
  = f.hidden_field :group_id, value: @participating_group.id
  = f.labeled :joint_participation do
    = f.inline_radio_button(:joint_participation, true, t('global.yes'))
    = f.inline_radio_button(:joint_participation, false, t('global.no'))
